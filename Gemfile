  gem 'byebug'
end

group :development do
  gem 'spring'
  gem 'web-console', '~> 2.0'
end

gem 'aws-sdk'
gem 'figaro'

gem 'kristin'
gem 'libreconv'

group :development do
  gem 'capistrano', '~> 3.4'
  gem 'capistrano-bundler', '~> 1.1.2'
  gem 'capistrano-rvm'
  gem 'capistrano-unicorn-nginx', '~> 3.2.0'
end

gem 'hashie'
